      />
      <van-field
        value="{{registerInfo.carNo}}"
        placeholder="请输入车牌"
        input-class="p-input"
        border="{{ false }}"
        data-key="carNo"
        @change="changeRegister"
      />
      <div class="info">
        <div>注册即表示你接受</div>
        <div>
          本程序的<span class="rules">服务条款</span>和<span class="rules"
            >隐私条约</span
          >
        </div>
      </div>
      <van-button @click="registerUser" custom-class="login-btn"
        >注册</van-button
      >
    </div>
    <div class="login" v-else-if="loginFlag">
      <image
        mode="center"
        class="img"
        src="http://localhost:3002/static/title.jpg"
      />
      <van-field
        :value="registerInfo.username"
        placeholder="请输入用户名"
        input-class="p-input"
        border="{{ false }}"
        data-key="username"
        @change="changeLogin"
      />
      <van-field
        :value="registerInfo.password"
        type="password"
        placeholder="请输入密码"
        input-class="p-input"
        border="{{ false }}"
        data-key="password"
        @change="changeLogin"
      />
      <div class="info">
        <div>登录即表示你接受</div>
        <div>
          本程序的<span class="rules">服务条款</span>和<span class="rules"
            >隐私条约</span
          >
        </div>
      </div>
      <van-button @click="loginUser" custom-class="login-btn">登录</van-button>
    </div>

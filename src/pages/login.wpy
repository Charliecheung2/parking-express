      <image
        class="img"
        mode="aspectFill"
        src="http://localhost:3002/static/bgc.jpg"
      />
      <div class="button">
        <van-button @click="goLogin" custom-class="login-btn">登录</van-button>
        <div @click="goRegister" id="register">或注册</div>
      </div>
    </div>
    <van-toast id="van-toast" />
  </div>
</template>
<script>
import wepy from '@wepy/core';
import { login, register } from '../api/api';
import Toast from '../components/dist/toast/toast';

wepy.page({
  data: {
    loginFlag: true,
    registerFlag: false,
    registerInfo: {
      username: '',
      password: '',
      rePassword: '',
      phone: null,
      area: '',
      carNo: '',
    },
    loginInfo: {
      username: '',
      password: '',
    },
    registe: '',
    errorMessage: '',
    retypeMessage: '',
  },
  onShow() {},
  methods: {
    hello() {
      // list().then((res) => {
      //   console.log(res)
      // })
    },
    login() {
      const user = this.loginInfo;
      login(user).then((res) => {
        console.log(res);
      });
    },
    goRegister() {
      this.register = true;
    },
    goLogin() {
      this.login = true;
    },
    async registerUser() {
      // if(this)
      if (this.registerInfo.password !== this.registerInfo.rePassword) {
        this.retypeMessage = '两次密码不一致';
        return;
      } else {
        this.retypeMessage = '';
      }
      let params = {
        data: this.registerInfo,
        method: 'POST',
      };
      const user = this.registerInfo;
      await register(params).then((res) => {
        if (res.code === '0000') {
          Toast(res.msg);
          this.login = true;
          this.register = false;
        } else {
          Toast(res.msg);
        }
      });
    },
    async loginUser() {
      let params = {
        data: this.loginInfo,
        method: 'POST',
      };
      await login(params).then((res) => {
        if (res.code === '0000') {
          Toast(res.msg);
          let globalData = this.$app.$options.globalData;
          globalData.user = res.user;
          globalData.token = res.token;
          wx.switchTab({
            url: 'find',
          });
        } else {
          Toast(res.msg);
        }
      });
    },
    changeLogin(e) {
      let target = e.$wx;
      let key = target.target.dataset.key;
      let value = target.detail;
      this.loginInfo[key] = value;
    },
    changeRegister(e) {
      let target = e.$wx;
      let key = target.target.dataset.key;
      if (key === 'password') {
        this.registerInfo.password.length <= 7
          ? (this.errorMessage = '密码长度要在8位以上')
          : (this.errorMessage = '');
      }
      let value = target.detail;
      this.registerInfo[key] = value;
    },
  },
});
</script>

        :error-message="errorMessage"
        @change="changeRegister"
      />
      <van-field
        value="{{registerInfo.rePassword}}"
        type="password"
        placeholder="再次请输入密码"
        input-class="p-input"
        border="{{ false }}"
        data-key="rePassword"
        @change="changeRegister"
        :error-message="retypeMessage"
      />
      <van-field
        value="{{registerInfo.phone}}"
        type="number"
        placeholder="请输入手机号码"
        input-class="p-input"
